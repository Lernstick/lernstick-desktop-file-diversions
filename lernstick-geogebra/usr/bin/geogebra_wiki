#!/bin/sh
SHORT_LANG="$(echo $LANG | awk -F_ '{print $1}')"

case "${SHORT_LANG}" in
	de)
		firefox http://wiki.geogebra.org/de/
		;;
	es)
		firefox http://wiki.geogebra.org/es/
		;;
	fr)
		firefox http://wiki.geogebra.org/fr/
		;;
	it)
		firefox http://wiki.geogebra.org/it/
		;;
	pt)
		firefox http://wiki.geogebra.org/pt/
		;;
	*)
		firefox http://wiki.geogebra.org/en/
		;;
esac
