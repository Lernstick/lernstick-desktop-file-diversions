#!/bin/sh
# postrm script for lernstick-calibre
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|upgrade|failed-upgrade|abort-upgrade)
    ;;

    remove|abort-install|disappear)
        dpkg-divert --remove --package lernstick-calibre --rename --divert \
            /usr/share/applications/calibre-gui.desktop.orig \
            /usr/share/applications/calibre-gui.desktop
        dpkg-divert --remove --package lernstick-calibre --rename --divert \
            /usr/share/applications/ebook-viewer.desktop.orig \
            /usr/share/applications/ebook-viewer.desktop
        dpkg-divert --remove --package lernstick-calibre --rename --divert \
            /usr/share/applications/lrfviewer.desktop.orig \
            /usr/share/applications/lrfviewer.desktop
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


