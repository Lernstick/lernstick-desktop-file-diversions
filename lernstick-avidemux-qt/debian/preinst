#!/bin/sh
# preinst script for lernstick-avidemux-qt
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install|upgrade)
        dpkg-divert --add --package lernstick-avidemux-qt --rename --divert \
            /usr/share/applications/avidemux_jobs.desktop.orig \
            /usr/share/applications/avidemux_jobs.desktop
        dpkg-divert --add --package lernstick-avidemux-qt --rename --divert \
            /usr/share/applications/org.avidemux.Avidemux.desktop.orig \
            /usr/share/applications/org.avidemux.Avidemux.desktop
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
