#!/bin/sh

. /usr/share/live-resolution/resolution.sh

CONFIG_FILE=~/.supertux2/config

Replace "(fullscreen .*)" "(fullscreen #t)" ${CONFIG_FILE}
Replace "(fullscreen_width .*)" "(fullscreen_width ${_RESOLUTION_X})" ${CONFIG_FILE}
Replace "(fullscreen_height .*)" "(fullscreen_height ${_RESOLUTION_Y})" ${CONFIG_FILE}

supertux2 ${@}
