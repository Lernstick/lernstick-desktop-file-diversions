#!/bin/sh
# postrm script for lernstick-libelementary-bin
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    purge|upgrade|failed-upgrade|abort-upgrade)
    ;;

    remove|abort-install|disappear)
        dpkg-divert --remove --package lernstick-libelementary-bin --rename --divert \
            /usr/share/applications/elementary_config.desktop.orig \
            /usr/share/applications/elementary_config.desktop
        dpkg-divert --remove --package lernstick-libelementary-bin --rename --divert \
            /usr/share/applications/elementary_perf.desktop.orig \
            /usr/share/applications/elementary_perf.desktop
        dpkg-divert --remove --package lernstick-libelementary-bin --rename --divert \
            /usr/share/applications/elementary_test.desktop.orig \
            /usr/share/applications/elementary_test.desktop
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
