#!/bin/sh
# preinst script for lernstick-libelementary-bin
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install|upgrade)
        dpkg-divert --add --package lernstick-libelementary-bin --rename --divert \
            /usr/share/applications/elementary_config.desktop.orig \
            /usr/share/applications/elementary_config.desktop
        dpkg-divert --add --package lernstick-libelementary-bin --rename --divert \
            /usr/share/applications/elementary_perf.desktop.orig \
            /usr/share/applications/elementary_perf.desktop
        dpkg-divert --add --package lernstick-libelementary-bin --rename --divert \
            /usr/share/applications/elementary_test.desktop.orig \
            /usr/share/applications/elementary_test.desktop
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
